{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"paths": {
			"@src/*": ["./src/*"],
			"@data/*": ["./src/data/*"],
			"@views/*": ["./src/views/*"],
			"@leaves/*": ["./src/leaves/*"],
			"@models/*": ["./src/models/*"],
			"@services/*": ["./src/services/*"],
			"@contexts/*": ["./src/contexts/*"],
			"@settings/*": ["./src/settings/*"],
			"@components/*": ["./src/components/*"]
		}
	},
	"include": ["**/*.ts", "src/index.ts", "main.tsx", "test.js"]
}
